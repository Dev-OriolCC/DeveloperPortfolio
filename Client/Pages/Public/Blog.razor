@page "/blog"
@using Client.Components.Public.Shared

<Navbar />

@* Blog category cards *@
<main class="container min-vh-90 py-5">
    <div class="row">
        <div class="col">
            <h1 class="my-3">Blog</h1>
            <p>Click a category card to view its blog posts.</p>
             <div class="row">
                @* CARD 1 *@
                <div class="col-md-4">
                    <div class="card shadow mb-2">
                        <img src="assets/img/other/placeholder.jpg" class="card-img-top" alt="Category thumbnail image" />
                        <div class="card-body">
                            <h3 class="card-title">Category name</h3>
                            <p class="card-text">Category description</p>
                        </div>
                        <a href="/" class="btn btn-primary stretched-link">View posts</a>
                    </div>
                </div>
                @* CARD 2 *@
                <div class="col-md-4">
                    <div class="card shadow mb-2">
                        <img src="assets/img/other/placeholder.jpg" class="card-img-top" alt="Category thumbnail image" />
                        <div class="card-body">
                            <h3 class="card-title">Category name</h3>
                            <p class="card-text">Category description</p>
                        </div>

                        <a href="/" class="btn btn-primary stretched-link">View posts</a>
                    </div>
                </div>
                @* CARD 3 *@
                <div class="col-md-4">
                    <div class="card shadow mb-2">
                        <img src="assets/img/other/placeholder.jpg" class="card-img-top" alt="Category thumbnail image" />
                        <div class="card-body">
                            <h3 class="card-title">Category name</h3>
                            <p class="card-text">Category description</p>
                        </div>

                        <a href="/" class="btn btn-primary stretched-link">View posts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

